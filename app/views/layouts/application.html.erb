<!DOCTYPE html>
<html>
  <head>
    <title>BurningFuryRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <header>
    <nav>
      <h1> Burning Airlines</h1>

      <% if @current_user.present? %>
      Welcome, <%= @current_user.username %>

      <%= link_to 'Logout', login_path, method: 'delete' %>

      <% else %>
      <%= link_to 'Login', login_path %>

      <%= link_to 'Sign Up', new_user_path %>
      <% end %>

      <%= link_to 'Create airplane', new_airplane_path	 %>

      <%= link_to 'Create new flight', new_flight_path%>

      <%= link_to 'Create reservation', new_reservation_path	%>
    </nav>
  </header>

    <%= yield %>

    <footer> &copy; Burning Airlines pty ltd</footer>
  </body>
</html>
